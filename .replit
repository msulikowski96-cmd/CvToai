[nix]
channel = "stable-25_05"
packages = ["libev", "openssl", "postgresql"]

[deployment]
deploymentTarget = "autoscale"
run = ["gunicorn", "-k", "gevent", "-w", "2", "--timeout", "60", "--log-level", "info", "--bind", "0.0.0.0:5000", "app:app"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Flask App"

[[workflows.workflow]]
name = "Flask App"
author = "agent"

[workflows.workflow.metadata]
outputType = "webview"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "gunicorn --bind=0.0.0.0:5000 --workers=2 --worker-class=gevent --worker-connections=1000 --timeout=120 --keep-alive=2 --max-requests=1000 --max-requests-jitter=50 --preload app:app"
waitForPort = 5000

[[workflows.workflow]]
name = "Flask App Quiet"
author = 47668588
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "gunicorn -k gevent -w 2 --timeout 60 --log-level warning --bind 0.0.0.0:5000 app:app"

[agent]
expertMode = true
integrations = ["python_database:1.0.0"]

[[ports]]
localPort = 5000
externalPort = 80
